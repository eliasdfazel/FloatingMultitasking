<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fullPreferencesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/preferencesToolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/giftIcon"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_gift"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/titlePreferences"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_toEndOf="@id/giftIcon"
                android:paddingStart="1dp"
                android:paddingEnd="13dp"
                android:gravity="center_vertical"
                android:text="@string/settingTitle"
                android:textSize="25sp"
                android:textColor="@color/default_color_darker"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/summaryPreferences"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/titlePreferences"
                android:layout_toEndOf="@id/giftIcon"
                android:paddingStart="2dp"
                android:paddingEnd="13dp"
                android:gravity="center_vertical"
                android:text="@string/settingTitle"
                android:textSize="12sp"
                android:textColor="@color/dark"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/facebookIcon"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_facebook"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/deleteAccount"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="53dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_delete_account"
                android:visibility="invisible"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/containerPreferencesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/preferencesToolbar"/>

</RelativeLayout>

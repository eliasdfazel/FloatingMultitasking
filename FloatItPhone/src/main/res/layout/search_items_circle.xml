<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchItem"
    android:layout_width="173dp"
    android:layout_height="47dp"
    android:background="@drawable/background_search_items"
    android:visibility="visible">

    <net.geekstools.imageview.customshapes.ShapesImage xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemAppIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:scaleType="centerCrop"
        apps:shapeDrawable="@drawable/circle_icon" />

    <TextView
        android:id="@+id/itemAppName"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/itemAppIcon"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/darker"
        android:textSize="17sp"/>
</RelativeLayout>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_color_game_light">
    <item android:id="@+id/backgroundTemporary">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_color_game_transparent" />
            <corners android:radius="51dp"/>
        </shape>
    </item>

    <item
        android:id="@+id/frontTemporary"
        android:start="3dp"
        android:end="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark" />
            <corners android:radius="51dp"/>
        </shape>
    </item>

</ripple>

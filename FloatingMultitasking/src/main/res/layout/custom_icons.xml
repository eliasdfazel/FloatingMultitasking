<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogueView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="11dp"
    android:background="@drawable/dialogue_rounded_background">

    <TextView
        android:id="@+id/dialogueTitle"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/dark"
        android:textSize="21sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customIconList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogueTitle"
        android:layout_marginStart="3dp"
        android:layout_marginTop="7dp"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="2dp"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="13dp"
        android:requiresFadingEdge="vertical"
        android:scrollbarSize="0dp"/>

    <TextView
        android:id="@+id/setDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customIconList"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="17dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/defaultTheme"
        android:textColor="@color/default_color_darker"
        android:textSize="15sp"/>

</RelativeLayout>

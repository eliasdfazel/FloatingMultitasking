<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wholeViewWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/floating_widgets_background">

    <TextView
        android:id="@+id/widgetLabel"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:text="@string/app_name"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/widgetMoveButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/draw_move" />

    <ImageView
        android:id="@+id/widgetCloseButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/draw_close_service" />

    <RelativeLayout
        android:id="@+id/widgetViewGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widgetLabel"
        android:gravity="center" />

    <Button
        android:id="@+id/widgetResizeControl"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/w_resize"/>

</RelativeLayout>